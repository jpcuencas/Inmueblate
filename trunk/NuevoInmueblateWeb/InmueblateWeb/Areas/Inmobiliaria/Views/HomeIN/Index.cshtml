@model InmueblateWeb.Models.Entrada
@{
    ViewBag.Title = "Últimas Noticias";
    ViewBag.Titulo = "Index Usuarios";
}
<h3>@ViewBag.Titulo</h3>
    <article>

    <div class="well bs-component">
    <div class="bs-component">
       @using (Html.BeginForm("NuevaEntrada", "HomeIN", FormMethod.Post, new { @class = "form-horizontal new-val" }))
       {

            <div class="form-group">
                <div class="col-md-3 control-label">
                    @Html.LabelFor(m => m.Titulo)
                </div>
                @*<label for="txtComentario" class="col-md-3 control-label">Comentario: </label>*@
                <div class="col-md-9">
                    @Html.TextBoxFor(m => m.Titulo, new
               {
                   @class = "form-control",
                   placeholder = "Introduce un comentario..."
               })
                    @Html.ValidationMessageFor(m => m.Titulo)
                </div>
            </div>
           
            <div class="form-group">
                <div class="col-md-3 control-label">
                    @Html.LabelFor(m => m.Cuerpo)
                </div>
                @*<label for="txtComentario" class="col-md-3 control-label">Comentario: </label>*@
                <div class="col-md-9">
                    @Html.TextBoxFor(m => m.Cuerpo, new
               {
                   @class = "form-control",
                   placeholder = "Introduce un comentario..."
               })
                    @Html.ValidationMessageFor(m => m.Cuerpo)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-3 col-md-1" id="btnEnviar">
                    <button type="submit" class="btn btn-primary">Enviar</button> 
                </div>
            </div>
       }
        </div>
</div>
	  
	    <br />
        <hr />
    </article>
@if (ViewBag.Entradas != null)
{
    for (int i = 0; i < ViewBag.Entradas.Count; i++)
    { 
   <article class="well bs-component">
        <div class="row" id="ent-mur">
            

            @if (ViewBag.Entradas[i].Titulo != "")
            {
                <label> @ViewBag.Entradas[i].Titulo</label>
            }
            <p class="ent-cue">@ViewBag.Entradas[i].Cuerpo</p>
            <div class="col-md-4">
                <p class="fec-ent">Enviado a las <strong>@ViewBag.Entradas[i].FechaPublicacion</strong></p>
            </div>
            
            <div class="col-md-8">
                <ul class="nav nav-pills" style="float:right;">
		            <li><a class="btn btn-primary btn-xs" href="">comentar</a></li>
	            </ul>
            </div>
        </div>
    </article>
    }
}
